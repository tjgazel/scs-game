root = true

[*]
charset = utf-8
end_of_line = lf

[*.{php,json}]
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,vue,ts}]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true

[*.{html,phtml,blade.php,twig}]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true